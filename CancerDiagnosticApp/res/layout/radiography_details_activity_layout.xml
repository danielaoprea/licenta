<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/radiography_details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/radiography_details_diagnostic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiography_details_date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/radiography_details_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiography_details_diagnostic"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edit_details_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/radiography_details_details"
        android:layout_alignParentRight="true"
        android:text="@string/edit_underlined"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginRight="3dp"
        android:textSize="18sp" />

</RelativeLayout>